{% extends "base.html.twig" %}

{% block content %}

    <div class="container-fluid"
        <div class="row">
            <div class="col-12 text-center py-5">
                    <h1>{{ content.title }}</h1>
            </div>

            <div id="carouselExampleControls" class="carousel slide col-3 m-auto py-5" data-ride="carousel">
                <div class="carousel-inner">

                    {% if content.headerImage|default %}
                        <div class="carousel-item active">
                            <img class="d-block h-100" src="{{ content.headerImage.thumbnails['y400'] }}" alt="{{ content.headerImage.title }}">
                        </div>
                    {% endif %}

                    {% for image in content.images %}
                        <div class="carousel-item">
                            <img class="d-block" src="{{ image.thumbnails['y400'] }}" alt="{{ image.title }}" class="img-fluid">
                        </div>
                    {% endfor %}
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>

    {% dump(content.images) %}
{% endblock %}
