<?xml version="1.0" ?>
<template xmlns="http://schemas.sulu.io/template/template"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd"
          >

    <key>footer</key>

    <properties>
        <property name="title" type="text_line" mandatory="true">
            <meta>
                <title lang="en">Title</title>
            </meta>

            <tag name="sulu.search.field" role="title" />
        </property>

         <property name="copyright_author" type="text_line">
            <meta>
                <title lang="en">Author</title>
            </meta>
        </property>

        <property name="phone" type="phone">
            <meta>
                <title lang="en">Phone Number</title>
            </meta>
        </property>

         <property name="address" type="text_line">
            <meta>
                <title lang="en">Address</title>
            </meta>
        </property>
    
    </properties>
</template>